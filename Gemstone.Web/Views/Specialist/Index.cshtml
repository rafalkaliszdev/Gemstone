@model IList<Gemstone.Web.ViewModels.SpecialistModel>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsBusy)</th>
            <th>@Html.DisplayNameFor(model => model.First().JoinedOn)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var element in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => element.Name)</td>
                    <td>@Html.DisplayFor(modelItem => element.IsBusy)</td>
                    <td>@Html.DisplayFor(modelItem => element.JoinedOn) </td>
                    <td>@Html.ActionLink("Details", nameof(SpecialistController.Details), new { id = element.ID })</td>
                    <td>@Html.ActionLink("Assign", nameof(SpecialistController.DirectAssign), new { id = element.ID })</td>
                </tr>
            }
        }
    </tbody>
</table>
