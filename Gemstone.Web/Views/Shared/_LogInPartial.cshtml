@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor

@if (accessor.HttpContext.User.Identity.IsAuthenticated)
{
    <span class="navbar-text">
        &nbsp;
        @Html.ActionLink("Log out", "LogOut", "Account")
        <span class="badge badge-pill badge-success">Logged as @accessor.HttpContext.User.Identity.Name</span>
    </span>
}
else
{
    <span class="navbar-text">
        &nbsp;
        @Html.ActionLink("Log in", "LogIn", "Account")
    </span>

    <span class="navbar-text">
        &nbsp;
        @Html.ActionLink("Register", "Register", "Account")
        <span class="badge badge-pill badge-warning">Logged Out</span>
    </span>
}
