@model Gemstone.Web.Models.AccountModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@{
    ViewData["Title"] = "Sign In";
}

@if (accessor.HttpContext.User.Identity.IsAuthenticated)
{
    var user = accessor.HttpContext.User;
    <div>
        <p>Name: @user.Identity.Name</p>
        <p>Claim @user.Claims.FirstOrDefault().Value</p>
    </div>
}
else
{
    <div>
        not authenciated
    </div>
}

<div class="row">
    <div class="col-md-4">
        <TagHelper:form asp-controller="Account" asp-action="SignIn" method="post">
            <div class="form-group">
                <TagHelper:label asp-for="Id" class="control-label"></TagHelper:label>
                <TagHelper:input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <TagHelper:label asp-for="Login" class="control-label"></TagHelper:label>
                <TagHelper:input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <TagHelper:label asp-for="Password" class="control-label"></TagHelper:label>
                <TagHelper:input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <TagHelper:label asp-for="Email" class="control-label"></TagHelper:label>
                <TagHelper:input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In" class="btn btn-default" />
            </div>
        </TagHelper:form>
    </div>
</div>